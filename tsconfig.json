{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@payload-config": ["src/payload.config.js"]
    },
    "target": "ES2022"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/collections/Users/index.js",
    "src/collections/Media/index.js",
    "src/app/my-route/route.js",
    "src/app/(payload)/layout.jsx",
    "src/app/(payload)/c-admin/[[...segments]]/page.jsx",
    "src/app/(payload)/c-admin/[[...segments]]/not-found.jsx",
    "src/app/(payload)/api/[...slug]/route.js",
    "src/payload.config.js"
  ],
  "exclude": ["node_modules"]
}
